<h1>New Idea</h1>

<%= form_for @idea do |f| %>
<div class="form-group"><p>

<%= f.label :title %>
<%= f.text_field(:title, {class: "form-control"}) %>
</p>
</div>
<div class="form-group"><p>
<%= f.label :body %>
<%=  f.text_area(:body, {class: "form-control"}) %>
</p>
</div>
<div>
<%= f.submit "Save Idea" %>
</div>
<% end %>
